<div id="newstips-wrapper" class="container">
	<div id="header" class="jumbotron text-center">
		<h1 class="newstips-head">Newstips</h1>
		<h2 class="tips-subhead">Crowdsourcing tips for journalists</h2>
	</div>

	<div id="tips">
		<h2 class="got-tips">Got a tip?</h2>

		<form action="<%= tips_url %>" method="post" class="form-horizontal" role="form">

		<input
			type="hidden"
			name="authenticity_token"
			value="<%= form_authenticity_token %>">

			<div class="col-xs-6">
				<div class="form-group">
					<textarea name="tip[text]" placeholder="Enter your tip here." class="form-control" rows="5" id="comment"></textarea>
				</div>
			</div>

			<div class="col-xs-6">
				<div class="form-group">
				    <label class="control-label col-sm-2" for="username">Name</label>
				    <div class="col-sm-10">
				    	<input type="name" name="tip[name]" class="form-control" id="username" placeholder="Enter name">
				    </div>
				</div>

			  	<div class="form-group">
			    	<label class="control-label col-sm-2" for="exampleInputEmail">Email</label>
			    	<div class="col-sm-10">
			    		<input type="email" name="tip[email]" class="form-control" id="exampleInputEmail" placeholder="Enter email">
			    	</div>
			  	</div>

			  	<div class="form-group">
			    	<label class="control-label col-sm-2" for="phoneInput">Phone</label>
			    	<div class="col-sm-10">
			    		<input name="tip[phone]" type="text" class="form-control bfh-phone" data-format="+1 (ddd) ddd-dddd" placeholder="Enter phone number: (555) 555-5555">
			    	</div>
			  	</div>

			  	<div class="form-group">
				  	<label class="control-label col-sm-2" for="subjectInput">Subject</label>
				  	<div class="col-sm-10">
				  		<select name="tip[subject]" class="col-sm-10 form-control">

						    <option value="World">World</option>
							<option value="U.S.">U.S.</option>
							<option value="Politics">Politics</option>
							<option value="New York">New York</option>
							<option value="Business">Business</option>
							<option value="Technology">Technology</option>
							<option value="Science">Science</option>
							<option value="Health">Health</option>
							<option value="Sports">Sports</option>
							<option value="Education">Education</option>
							<option value="Obituaries">Obituaries</option>
							<option value="Television">Television</option>
							<option value="Theater">Theater</option>
							<option value="Video Games">Video Games</option>
							<option value="Video: Arts">Video: Arts</option>
							<option value="Education">Education</option>
