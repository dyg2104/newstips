							<option value="Health">Health</option>
							<option value="Home & Garden">Home & Garden</option>
							<option value="Jobs">Jobs</option>
							<option value="Magazine">Magazine</option>
							<option value="N.Y.C. Events Guide">N.Y.C. Events Guide</option>
							<option value="Real Estate">Real Estate</option>
							<option value="T Magazine">T Magazine</option>
							<option value="Travel">Travel</option>
						</select>
					</div>
				</div>

			  	<div class="form-group">
			    	<label class="control-label col-sm-2" for="cityInput">City</label>
			    	<div class="col-sm-6">
			    		<input name="tip[city]" type="location" class="form-control" id="locationInput" placeholder="Enter your city">
			    	</div>
			    	<label class="control-label col-sm-2" for="stateInput">State</label>
			    	<div class="col-sm-2">
			    		 <select name="tip[state]" type="state" class="form-control">
				            <option value="AL">AL</option>
				            <option value="AK">AK</option>
				            <option value="AZ">AZ</option>
				            <option value="AR">AR</option>
